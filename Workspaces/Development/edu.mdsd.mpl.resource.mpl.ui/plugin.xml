			</action>
		</viewerContribution>
	</extension>
	
	<extension point="org.eclipse.ui.editorActions">
		<editorContribution targetID="edu.mdsd.mpl.resource.mpl.ui.MplEditor" id="edu.mdsd.mpl.resource.mpl.ui.BreakpointRulerActions">
			<action id="edu.mdsd.mpl.resource.mpl.ui.debug.RulerToggleBreakpointAction" label="Add breakpoint" class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate" actionID="RulerDoubleClick">
			</action>
		</editorContribution>
	</extension>
	
	<extension point="org.eclipse.debug.ui.debugModelPresentations">
		<debugModelPresentation id="edu.mdsd.mpl.resource.mpl.debugModel" class="edu.mdsd.mpl.resource.mpl.ui.debug.MplDebugModelPresentation">
		</debugModelPresentation>
	</extension>
	
