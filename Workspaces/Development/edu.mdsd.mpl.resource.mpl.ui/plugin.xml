		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="edu.mdsd.mpl.resource.mpl.ui.MplNewFileWizard" id="edu.mdsd.mpl.resource.mpl.ui.MplNewFileWizard" name="EMFText .mpl file">
		</wizard>
		<category id="org.emftext.runtime.ui.EMFTextProjectCategory" name="EMFText Project">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextProjectCategory" icon="/icons/default_new_icon.gif" class="edu.mdsd.mpl.resource.mpl.ui.MplNewProjectWizard" id="edu.mdsd.mpl.resource.mpl.ui.MplNewProjectWizard" name="EMFText mpl project" project="true">
		</wizard>
	</extension>
	
	<extension point="org.eclipse.ui.ide.markerResolution">
		<markerResolutionGenerator class="edu.mdsd.mpl.resource.mpl.ui.MplMarkerResolutionGenerator" markerType="edu.mdsd.mpl.resource.mpl.problem">
		</markerResolutionGenerator>
	</extension>
	
	<extension point="org.eclipse.core.filebuffers.annotationModelCreation">
		<factory class="edu.mdsd.mpl.resource.mpl.ui.MplAnnotationModelFactory" extensions="mpl">
		</factory>
	</extension>
	
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type id="edu.mdsd.mpl.resource.mpl" name=".mpl File" base-type="org.eclipse.core.runtime.text" file-extensions="mpl">
		</content-type>
	</extension>
	
	<extension point="org.eclipse.ui.editors.documentProviders">
		<provider class="org.eclipse.ui.editors.text.TextFileDocumentProvider" extensions="mpl" id="edu.mdsd.mpl.resource.mpl.ui.provider">
		</provider>
	</extension>
	
