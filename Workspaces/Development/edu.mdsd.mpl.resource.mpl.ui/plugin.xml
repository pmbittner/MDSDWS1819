		<factory adaptableType="edu.mdsd.mpl.resource.mpl.ui.MplEditor" class="edu.mdsd.mpl.resource.mpl.ui.debug.MplAdapterFactory">
			<adapter type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget">
			</adapter>
		</factory>
		<factory adaptableType="edu.mdsd.mpl.resource.mpl.debug.MplDebugVariable" class="edu.mdsd.mpl.resource.mpl.ui.debug.MplAdapterFactory">
			<adapter type="org.eclipse.debug.internal.ui.viewers.model.provisional.IElementLabelProvider">
			</adapter>
		</factory>
		<factory adaptableType="edu.mdsd.mpl.resource.mpl.debug.MplDebugVariable" class="edu.mdsd.mpl.resource.mpl.ui.debug.MplAdapterFactory">
